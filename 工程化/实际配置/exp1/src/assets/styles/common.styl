    text-decoration: none;
}

.el-button--primary {
    background-color: $themeColor !important;
    border-color: $themeColor !important;
}

.el-button--primary:visited,
.el-button--primary:hover,
.el-button--primary:active {
    background-color: $themeColor;
    border-color: $themeColor;
}

.container {
    height: 100%;
    width: 100%;
    background: #efefef;
}

.public-head {
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 24px;
    box-sizing: border-box;
    height: 60px;
    width: 100%;
}

.public-head-left {
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.public-head-left h4 {
    font-size: 18px;
}
.public-head-rightt {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.public-box {
    box-sizing: border-box;
    margin: vw(20);
    background: #fff;
    width: 'calc(100% - %s)' % (@margin * 2) ;
    padding: vw(20);
    height: 'calc(100% - 60px - %s)' % (@margin * 2);
}

.el-select .el-input.is-focus .el-input__inner {
    border-color: $themeColor!important;
}

.el-select .el-input__inner:focus {
    border-color: $themeColor;
}

.el-menu {
    border-color: #2f4050;
}
